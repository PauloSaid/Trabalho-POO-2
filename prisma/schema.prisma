// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id         String   @id @default(uuid())
  email      String   @unique
  nome       String
  matricula  String   @unique
  telefone   String   @unique
  grupo      Grupo?   @relation("Lideranca")
  grupoAluno Grupo?    @relation("Composicao", fields: [grupoId], references: [nomeGrupo])
  grupoId    String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Professor {
  id         String   @id @default(uuid())
  email      String   @unique
  nome       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Grupo {
  id              String     @id @default(uuid())
  avaliacao       Avaliacao?
  estandeId       Int
  nomeGrupo       String     @unique
  nomeProjeto     String     @unique
  diaApresentacao DateTime
  lider           Aluno?      @relation("Lideranca", fields: [alunoId], references: [email])
  alunoId         String     @unique @default("")
  alunos          Aluno[]    @relation("Composicao")
  numeroEstande   Estande    @relation(fields: [estandeId], references: [numero])
}

model Estande {
  numero  Int     @id @unique
  grupoId Grupo[]
}

model Avaliacao {
  nomeGrupo Grupo  @relation(fields: [idGrupo], references: [nomeGrupo])
  idGrupo   String @id @default(uuid())
  nota1     Float
  nota2     Float
  notaFinal Float
}
